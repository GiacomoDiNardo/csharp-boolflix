@using csharp_boolflix.Models.Forms
@model FilmForm

<h1>Modifica Film</h1>

<form asp-controller="Film" asp-action="Update" asp-route-id="@Model.Film.Id" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <strong>Nome:</strong>
        <input asp-for="Film.Title" class="d-block w-100" />
        <span asp-validation-for="Film.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <strong>Descrizione:</strong>
        <textarea asp-for="Film.Description" class="d-block w-100" rows="3"></textarea>
        <span asp-validation-for="Film.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <strong>Immagine:</strong>
        <input asp-for="Film.Image" class="d-block w-100" />
        <span asp-validation-for="Film.Image" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <strong>Regista:</strong>
        <input asp-for="Film.Author" class="d-block w-100" />
        <span asp-validation-for="Film.Author" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <strong>Durata:</strong>
        <input asp-for="Film.Duration" class="d-block w-100" />
        <span asp-validation-for="Film.Duration" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <strong>Data:</strong>
        <input asp-for="Film.Date" class="d-block w-100" />
        <span asp-validation-for="Film.Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <strong>Categorie:</strong>
        <select asp-for="SelectedCategory"
                asp-items="@Model.Categories"
                multiple="multiple"
                size="5"
                class="form-control mb-2 mr-sm-2 ml-sm-3 leftList">
        </select>
    </div>
    <div class="mb-3">
        <strong>Cast:</strong>
        <select asp-for="SelectedCast"
                asp-items="@Model.Casts"
                multiple="multiple"
                size="5"
                class="form-control mb-2 mr-sm-2 ml-sm-3 leftList">
        </select>
    </div>
    <div class="text-end">
        <input type="submit" class="btn btn-small btn-success" value="Salva">
    </div>
</form>